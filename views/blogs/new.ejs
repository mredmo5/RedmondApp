<%- include("../partials/header") %>
    <div class="container ">
        <h1 class="text-center newcar">Create a Blog</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="title">
                </div>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[body]" placeholder="body">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="blog[image]" accept="image/*" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form> 
            <a href="/blogs">Go Back</a>
        </div>
    </div>
    <%- include("../partials/footer") %>