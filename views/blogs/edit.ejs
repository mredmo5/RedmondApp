


<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <strong><h1 style="text-align: center">Edit <%= blog.name %> </h1></strong>
            <div style="width: 30%; margin: 25px auto">
                <form action="/blogs/<%= blog._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="blog[title]" value="<%=blog.title%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="blog[body]" value="<%=blog.body%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit Changes</button>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="blog[image]" value="<%=blog.image%>">
                    </div>
                    
                </form>
                <a href="/index">Go Back</a>
            </div>
            
    </div>
</div>

<%- include("../partials/footer") %>